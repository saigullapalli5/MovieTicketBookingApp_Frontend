{
  "routes": [
    { "src": "/home", "dest": "/index.html" },
    { "src": "/login", "dest": "/index.html" },
    { "src": "/register", "dest": "/index.html" },
    { "src": "/showdetails/(?<movieId>[^/]+)", "dest": "/index.html" },
    { "src": "/movieshows/(?<movieName>[^/]+)", "dest": "/index.html" },
    { "src": "/seats/(?<theatreName>[^/]+)/(?<showId>[^/]+)", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    { "source": "/:path*", "destination": "/index.html" }
  ]
}
